<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.introduction.dao.IntroductionDAO">

	<select id="selectStoreByProductId" parameterType="int" resultType="com.project.introduction.model.Introduction">
		SELECT
			`id`,
			`productId`,
			`content`,
			`imagePath`,
			`createdAt`,
			`updatedAt`
		FROM
			`store`
		WHERE
			`productId` = #{productId}
	</select>


</mapper>