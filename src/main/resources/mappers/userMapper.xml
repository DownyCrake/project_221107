<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.user.dao.UserDAO">

<select id="existLoginId" parameterType="String" resultType="boolean">
	SELECT
		COUNT(*)
	FROM
		`user`
	WHERE
		`loginId` = #{loginId}
</select>

<insert id="insertUser" parameterType="map">
	INSERT
		INTO `user`
	(
		`loginId`,
		`password`,
		`name`,
		`phoneNumber`,
		`email`,
		`address`,
		`createdAt`,
		`updatedAt`
	)
	VALUES
		(
		#{loginId},
		#{password},
		#{name},
		#{phoneNumber},
		#{email},
		#{address},
		NOW(),
		NOW()
	)

</insert>

<select id="selectUserByLoginIdAndPassword" parameterType="map" resultType="com.project.user.model.User">
	SELECT
		`id`,
		`loginId`,
		`password`,
		`name`,
		`phoneNumber`,
		`email`,
		`address`,
		`createdAt`,
		`updatedAt`
	FROM
		`user`
	WHERE
		`loginId` = #{loginId}
		AND
		`password` = #{password}
</select>

</mapper>